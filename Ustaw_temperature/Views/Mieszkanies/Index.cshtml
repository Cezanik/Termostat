@model IEnumerable<Ustaw_temperature.Models.Mieszkanie>

@{
    ViewData["Title"] = "Index";
}

<h1>Mieszkanie</h1>

<p>
    @if (ViewData["test"] == null)
    {
        <a asp-action="Create">Create New</a>
    }
</p>

<table class="table">
    <thead>
        
    </thead>
    <tbody>
        @if (ViewData["test"] != null)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <div>
                            <h3>Dane na temat mieszkania</h3>
                            <a asp-action="Details" asp-route-id="@item.Id">Wyświetl szczegóły</a>
                        </div>

                        <div>
                            <h3>Edycja danych mieszkania</h3>
                            <a asp-action="Edit" asp-route-id="@item.Id">Edytuj</a>
                        </div>

                        <div>
                            <h3>Usuń mieszkanie</h3>
                            <a asp-action="Delete" asp-route-id="@item.Id">Usuń</a>
                        </div>

                        <div>
                            <h3>Dodawanie lub zmiana współlokatora</h3>
                            <a asp-action="Dodaj" asp-route-id="@item.Id">Dodaj/Zmień współlokatora</a>
                        </div>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
